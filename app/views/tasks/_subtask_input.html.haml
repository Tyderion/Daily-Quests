%li.ui-widget-content.draggable.ui-state-default.subtask
  = image_tag 'icons/remove.png', size: '16x16', title: "Remove", alt: "Remove", class: "calendar_icons hidden icon", id: "delete_icon"
  %label{for: "subtask#{task.id}"}
    %a{:"data-remote" => 'true', href: "/tasks/#{task.id}/details"}= task.title
  -#Todo: Fix the name of the input...
  %input{ id: "subtask#{task.id}", type: 'hidden', name: "task[subtasks[#{task.id}]]", value: task.id }
  .ui-icon.ui-icon-arrowthick-1-e{title: t('task.add_to_subtask')}
  .ui-icon.ui-icon-wrench{title: t('task.edit')}
    = link_to "#", edit_task_path(id: task), remote: true
  = link_to "#", task_path(Task.find(task.id)), :confirm => 'Are you sure?', :method => :delete, class: "ui-icon ui-icon-trash", title: t('task.destroy'), remote: true




