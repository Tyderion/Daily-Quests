= semantic_form_for @task do |f|
  .subtasks
    %h4 Subtasks
    %ol.droppable.ui-widget-content.sortable#Target_sortable
  = f.inputs do
    = f.input :title
    = f.input :description
    = f.input :private
    = f.input :type, as: :select, collection: TaskType.all



  = f.actions do
    = f.action :submit, button_html: {class: "pjax-container"}
    = f.action :cancel, button_html: {class: "pjax-container"}


- content_for :left_content do
  %ul
    Available Tasks
    =#select "Subtask","New", Task.all.collect {|p| [ p.title, p.id ] }, { :include_blank => true }
    - for task in @tasks
      = render partial: 'subtask_input', locals: { task: task }
      /%li.pjax_container.draggable.ui-widget-content=# link_to task.title, new_task_path(task_id: task), remote: true
- content_for :rightbar do
  =render partial: 'details_container'
