!!!
%html(lang="en")
  =render 'shared/head'
  %body
    =render 'shared/header'
    %div.container-fluid
      %div.row-fluid
        .span2=render 'shared/sidebar'
        .span9
          .row-fluid
            .span3
              =yield(:left_content)
            .span6{:"data-pjax-container" => ""}
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"

              -if show_title?
                %h1= yield(:title)
              = yield
            .span3.rightbar
              =yield(:rightbar)
      =render 'shared/footer'

    =render 'shared/javascripts'
