!!!
%html(lang="en")
  =render 'shared/head'
  %body
    =render 'shared/header'
    %div.container-fluid
      %div.row-fluid
        .span3=render 'shared/sidebar'
        %div.span6
          -unless @task
            - flash.each do |name, msg|
              = content_tag :div, msg, :id => "flash_#{name}"

          -if show_title?
            %h1= yield(:title)

          = yield
        .span3
          =yield(:rightbar)
      =render 'shared/footer'

    =render 'shared/javascripts'
